colorscheme esher

syntax on

set autoread
set cmdheight=2
set errorbells
set history=1000
set mouse=a
set noswapfile
set number
set ruler
set shortmess=a
set showcmd
set showmatch
set showtabline=2
set undolevels=1000
set visualbell

set autoindent
set breakindent
set cindent
set smartindent
set smarttab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set noexpandtab
set wrap
set linebreak

set hlsearch
set ignorecase
set smartcase
set incsearch
